<!-- hero ------------------------------------------------->

<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title is-1" style="color: white;"> Locations </h1> 
    </div>
    <div class="subtitle">
      <%= button_to "New Location", new_location_path, :method => "get", class: "button is-dark" %>  </div>
    </div>
</section>

<!-- thumbnails ------------------------------------------------->

<!-- columns ------------------------------------------------->

<div class="container is-fluid">
  <div class="columns is-multiline">
      <% @locations.map do |location| %>



           <div class="column is-one-third">
            <div class="thumbnail">
              <a href="<%= location_path(location) %>"><img src=<%= location.thumbnail %> alt=""></a>
            </div>
                <%= link_to location.name, location_path(location) %> <br>


                <% if location.id != Location.first.id %>

                <div class="field is-grouped">
                  <p class="control">
                    <a href= "<%= edit_location_path(location) %>" >
                    <button class="button is-link">
                      Edit
                    </button>
                  </p>

                  <p class="control">
                  <a href= "<%= location_path(location) %>" >
                    <%= button_to "Delete", location_path(location), method: "delete", class: "button is-dark" %>
                  </p>
                </div>


                <% end %>
           </div>
      <% end %>
  </div>
</div>
